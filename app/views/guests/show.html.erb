<h1>Guest Show Page</h1>

<h3>Guests:</h3>
<p>Name: <%= @guest.name %>, Nights: <%= @guest.nights %></p>

<h3>Rooms:</h3>

<ul>
  <% @rooms.each do |room| %>
  <li>Room: <%= room.suite %></li> 
  <li>Rate: <%= room.rate %></li> 
  <p>Hotel Name: <%= room.hotel.name %></p>
  <% end %> 
</ul>

<h3>Guest Form:</h3>

<%= form_with url: "/guests/#{@guest.id}/guest_rooms", method: :post, local: true do |f| %>
  <%= f.label "ID: " %>
  <%= f.number_field :room_id %>
  <%= f.submit "Submit" %>
<% end %>